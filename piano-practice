<script>
    // --- Configuration & Data ---
    // PIANO: Concert Pitch (Treble Clef).
    // Scale: C Major (C4 to C5).
    // Fingerings: Standard RH.
    
    const FULL_SCALE = [
        // C4 (Middle C) - Finger 1
        { name: "C", octave: 4, frequency: 261.63, keyId: "key-C4", finger: 1 }, 
        
        // D4 - Finger 2
        { name: "D", octave: 4, frequency: 293.66, keyId: "key-D4", finger: 2 }, 
        
        // E4 - Finger 3
        { name: "E", octave: 4, frequency: 329.63, keyId: "key-E4", finger: 3 }, 
        
        // F4 - Finger 1 (Thumb Tuck) OR Finger 4 if only playing 5 notes
        // We handle this logic in the loading function based on Range
        { name: "F", octave: 4, frequency: 349.23, keyId: "key-F4", finger: 1 }, 
        
        // G4 - Finger 2 (if tucked) OR Finger 5 if 5 notes
        { name: "G", octave: 4, frequency: 392.00, keyId: "key-G4", finger: 2 }, 
        
        // A4 - Finger 3
        { name: "A", octave: 4, frequency: 440.00, keyId: "key-A4", finger: 3 }, 
        
        // B4 - Finger 4
        { name: "B", octave: 4, frequency: 493.88, keyId: "key-B4", finger: 4 }, 
        
        // C5 - Finger 5
        { name: "C", octave: 5, frequency: 523.25, keyId: "key-C5", finger: 5 }  
    ];

    // Application State
    let audioContext;
    let analyser;
    let microphone;
    let buflen = 2048;
    let buf = new Float32Array(buflen);
    let isListening = false;
    
    let currentLevel = 1;
    let currentRange = 5; // 5 or 8
    let displayMode = 'name'; 
    let activeNotes = [];
    
    let currentNoteIndex = 0;
    let currentNote = null;
    let noteHeldFrames = 0; 
    const FRAMES_REQUIRED = 20; 
    let processingSuccess = false; 

    // UI Elements
    const canvas = document.getElementById('staffCanvas');
    const ctx = canvas.getContext('2d');
    const feedbackText = document.getElementById('feedbackText');
    const debugText = document.getElementById('pitch-debug');
    const indicator = document.getElementById('indicator');
    const fingeringDisplay = document.getElementById('fingeringDisplay');

    /* MENU JS */
    function toggleMenu() { document.getElementById("myDropdown").classList.toggle("show"); }
    window.onclick = function(event) {
        if (!event.target.matches('.dropbtn')) {
            var dropdowns = document.getElementsByClassName("dropdown-content");
            for (var i = 0; i < dropdowns.length; i++) {
                var openDropdown = dropdowns[i];
                if (openDropdown.classList.contains('show')) openDropdown.classList.remove('show');
            }
        }
    }

    // --- Mode Selection ---
    function setRange(range) {
        currentRange = range;
        document.getElementById('mode5').classList.toggle('active', range === 5);
        document.getElementById('mode8').classList.toggle('active', range === 8);
        
        // Logic for Fingering adjustment based on range
        // If range 5: F=4, G=5.
        // If range 8: F=1, G=2.
        
        activeNotes = JSON.parse(JSON.stringify(FULL_SCALE)); // Deep copy to modify
        
        if (range === 5) {
            activeNotes = activeNotes.slice(0, 5);
            activeNotes[3].finger = 4; // F
            activeNotes[4].finger = 5; // G
        } else {
            // Default 1-2-3-1-2-3-4-5 is already in FULL_SCALE
        }

        if(isListening) setLevel(currentLevel);
    }

    function setDisplayMode(mode) {
        displayMode = mode;
        document.getElementById('dispName').classList.toggle('active', mode === 'name');
        document.getElementById('dispDegree').classList.toggle('active', mode === 'degree');
        updateNoteLabel();
    }

    function updateNoteLabel() {
        if (!currentNote) return;
        let labelText = currentNote.name;
        if (displayMode === 'degree') {
            // Map C=1, D=2...
            // Simple index check in the active array works if we are sequential C scale
            // Let's use name check for safety
            const names = ["C", "D", "E", "F", "G", "A", "B"];
            const idx = names.indexOf(currentNote.name);
            if (idx !== -1) labelText = (idx + 1).toString();
            if (currentNote.name === 'C' && currentNote.octave === 5) labelText = "8"; // Top C
        }
        document.getElementById('noteLabel').innerText = labelText;
    }

    // --- Audio System ---
    async function startAudioContext() {
        try {
            audioContext = new (window.AudioContext || window.webkitAudioContext)();
            analyser = audioContext.createAnalyser();
            analyser.fftSize = 2048;
            const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
            microphone = audioContext.createMediaStreamSource(stream);
            microphone.connect(analyser);
            isListening = true;
            document.getElementById('btnStart').style.display = 'none';
            document.getElementById('messageBox').innerText = "Microphone active. Play!";
            document.getElementById('messageBox').style.backgroundColor = "#d4edda";
            document.getElementById('messageBox').style.color = "#155724";
            [1, 2, 3, 4].forEach(i => document.getElementById(`btnLvl${i}`).disabled = false);
            setRange(5); // Initialize
            setLevel(1);
            indicator.classList.add('active');
            updatePitch();
        } catch (err) {
            alert("Mic Error: " + err);
        }
    }

    function autoCorrelate(buf, sampleRate) {
        let SIZE = buf.length;
        let rms = 0;
        for (let i = 0; i < SIZE; i++) { let val = buf[i]; rms += val * val; }
        rms = Math.sqrt(rms / SIZE);
        if (rms < 0.015) return -1; 
        let r1 = 0, r2 = SIZE - 1, thres = 0.2;
        for (let i = 0; i < SIZE / 2; i++) { if (Math.abs(buf[i]) < thres) { r1 = i; break; } }
        for (let i = 1; i < SIZE / 2; i++) { if (Math.abs(buf[SIZE - i]) < thres) { r2 = SIZE - i; break; } }
        buf = buf.slice(r1, r2);
        SIZE = buf.length;
        let c = new Array(SIZE).fill(0);
        for (let i = 0; i < SIZE; i++) { for (let j = 0; j < SIZE - i; j++) { c[i] = c[i] + buf[j] * buf[j + i]; } }
        let d = 0; while (c[d] > c[d + 1]) d++;
        let maxval = -1, maxpos = -1;
        for (let i = d; i < SIZE; i++) { if (c[i] > maxval) { maxval = c[i]; maxpos = i; } }
        let T0 = maxpos;
        let x1 = c[T0 - 1], x2 = c[T0], x3 = c[T0 + 1];
        let a = (x1 + x3 - 2 * x2) / 2;
        let b = (x3 - x1) / 2;
        if (a) T0 = T0 - b / (2 * a);
        return sampleRate / T0;
    }

    function updatePitch() {
        if (!isListening) return;
        analyser.getFloatTimeDomainData(buf);
        let pitch = autoCorrelate(buf, audioContext.sampleRate);
        if (pitch !== -1) {
            debugText.innerText = `Detected: ${Math.round(pitch)} Hz`;
            checkNote(pitch);
        } else {
            noteHeldFrames = 0;
        }
        requestAnimationFrame(updatePitch);
    }

    // --- Game Logic ---
    function setLevel(lvl) {
        currentLevel = lvl;
        document.querySelectorAll('.controls button').forEach(b => b.classList.remove('active'));
        document.getElementById(`btnLvl${lvl}`).classList.add('active');
        currentNoteIndex = 0;
        
        // Hide fingering in levels 2 and 4
        const keys = document.querySelectorAll('.key');
        if (lvl === 2 || lvl === 4) {
            keys.forEach(k => k.classList.remove('active'));
        } else {
            // Update will handle showing it
        }

        feedbackText.innerText = `Level ${lvl} Started! Play:`;
        feedbackText.className = "feedback";
        loadNextNote();
    }

    function loadNextNote() {
        if (currentLevel === 1 || currentLevel === 2) {
            if (currentNoteIndex >= activeNotes.length) currentNoteIndex = 0;
            currentNote = activeNotes[currentNoteIndex];
        } else {
            let randomIndex = Math.floor(Math.random() * activeNotes.length);
            currentNote = activeNotes[randomIndex];
        }
        drawStaff();
        updateKeyboard();
        updateNoteLabel();
    }

    function updateKeyboard() {
        // Clear all
        document.querySelectorAll('.key').forEach(k => {
            k.classList.remove('active');
            const span = k.querySelector('span');
            if(span) span.innerText = '';
        });

        // If level allows help
        if (currentLevel === 1 || currentLevel === 3) {
            const keyEl = document.getElementById(currentNote.keyId);
            if (keyEl) {
                keyEl.classList.add('active');
                const span = document.getElementById(`f-${currentNote.name}${currentNote.octave}`);
                if(span) span.innerText = currentNote.finger;
            }
        }
    }

    function checkNote(freq) {
        if (processingSuccess) return; 
        const target = currentNote.frequency;
        const tolerance = target * 0.04; 

        if (freq > target - tolerance && freq < target + tolerance) {
            noteHeldFrames++;
            feedbackText.innerText = "Hold it...";
            feedbackText.style.color = "orange";
            
            if (noteHeldFrames > FRAMES_REQUIRED) {
                processingSuccess = true; 
                feedbackText.innerText = "Correct!";
                feedbackText.className = "feedback success-msg";
                document.getElementById('successOverlay').style.display = 'flex'; 
                noteHeldFrames = 0;
                setTimeout(() => {
                    document.getElementById('successOverlay').style.display = 'none'; 
                    feedbackText.innerText = "Play..."; 
                    feedbackText.style.color = "var(--primary)";
                    if (currentLevel <= 2) currentNoteIndex++;
                    loadNextNote();
                    processingSuccess = false; 
                }, 2000); 
            }
        } else {
            noteHeldFrames = Math.max(0, noteHeldFrames - 1); 
        }
    }

    // --- Canvas Drawing (Treble Clef) ---
    function drawStaff() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        const startX = 50; const endX = 550;
        const lineSpacing = 20; const staffTop = 80;

        ctx.strokeStyle = "#000"; ctx.lineWidth = 2;
        for (let i = 0; i < 5; i++) {
            ctx.beginPath();
            let y = staffTop + (i * lineSpacing);
            ctx.moveTo(startX, y); ctx.lineTo(endX, y);
            ctx.stroke();
        }
        ctx.font = "60px serif"; ctx.fillStyle = "#000";
        ctx.fillText("ùÑû", startX + 10, staffTop + 70);
        drawNoteHead(currentNote);
    }

    function drawNoteHead(note) {
        const staffTop = 80;
        const lineSpacing = 20;
        const centerX = 300;
        let yPos;
        let needsLedger = false;
        
        // Treble Clef
        // Top Line (F5) = 80
        
        switch(note.name) {
            case 'C': 
                if (note.octave === 5) {
                   yPos = staffTop + 30; // 3rd Space
                } else {
                   yPos = staffTop + 100; // Ledger below
                   needsLedger = true;
                }
                break;
            case 'D': yPos = staffTop + 90; break;
            case 'E': yPos = staffTop + 80; break;
            case 'F': yPos = staffTop + 70; break;
            case 'G': yPos = staffTop + 60; break;
            case 'A': yPos = staffTop + 50; break;
            case 'B': yPos = staffTop + 40; break;
        }

        ctx.beginPath();
        ctx.ellipse(centerX, yPos, 12, 10, 0, 0, 2 * Math.PI);
        ctx.fillStyle = "black";
        ctx.fill();

        let stemDown = false; 
        if (note.name === 'B' || (note.name === 'C' && note.octave === 5)) stemDown = true;

        ctx.beginPath();
        if (stemDown) {
            ctx.moveTo(centerX - 11, yPos); ctx.lineTo(centerX - 11, yPos + 50);
        } else {
            ctx.moveTo(centerX + 11, yPos); ctx.lineTo(centerX + 11, yPos - 50);
        }
        ctx.stroke();

        if (needsLedger) {
            // C4 line
            const l1 = staffTop + 100;
            ctx.beginPath(); ctx.moveTo(centerX - 20, l1); ctx.lineTo(centerX + 20, l1); ctx.stroke();
        }
    }

    drawStaff();
    // No updateKeyboard here because loadNote calls it

</script>
</body>
</html>
