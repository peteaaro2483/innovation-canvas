    <!-- Range Selector -->
    <div class="mode-selector">
        <span style="font-size: 0.9rem; color: #546e7a; margin-right: 10px;">Range:</span>
        <button class="mode-btn active" id="mode5" onclick="setRange(5)">First 5 Notes</button>
        <button class="mode-btn" id="mode8" onclick="setRange(8)">Full Scale</button>
    </div>

    <!-- Label Selector -->
    <div class="mode-selector labels">
        <span style="font-size: 0.9rem; color: #546e7a; margin-right: 10px;">Labels:</span>
        <button class="mode-btn active" id="dispName" onclick="setDisplayMode('name')">Note Names</button>
        <button class="mode-btn" id="dispDegree" onclick="setDisplayMode('degree')">Scale Degrees</button>
    </div>

    <div class="controls">
        <button class="control-btn" id="btnStart" onclick="startAudioContext()">üé§ Start Microphone</button>
        <button class="control-btn" id="btnLvl1" onclick="setLevel(1)" disabled>Level 1: Order + Help</button>
        <button class="control-btn" id="btnLvl2" onclick="setLevel(2)" disabled>Level 2: Order Only</button>
        <button class="control-btn" id="btnLvl3" onclick="setLevel(3)" disabled>Level 3: Random + Help</button>
        <button class="control-btn" id="btnLvl4" onclick="setLevel(4)" disabled>Level 4: Challenge</button>
    </div>

    <div class="display-area">
        <div id="successOverlay" class="overlay">‚úÖ</div>
