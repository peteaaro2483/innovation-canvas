    <!-- PIANO VISUALIZATION -->
    <div class="piano-container" id="fingeringDisplay">
        <div class="keyboard">
            <!-- White Keys -->
            <div class="key white" id="key-C4"><span class="finger-num" id="f-C4"></span></div>
            <div class="key white" id="key-D4"><span class="finger-num" id="f-D4"></span></div>
            <div class="key white" id="key-E4"><span class="finger-num" id="f-E4"></span></div>
            <div class="key white" id="key-F4"><span class="finger-num" id="f-F4"></span></div>
            <div class="key white" id="key-G4"><span class="finger-num" id="f-G4"></span></div>
